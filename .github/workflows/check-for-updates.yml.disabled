name: Check Synchronet Source Repository for Updates
on:
  push:
    branches:
      - master
  # 9am utc daily (~7-8am california)
  # after gitlab.synchro.net runs nightlies (5am)
  schedule:
    - cron: "0 15 * * *"

jobs:
  stale:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-node@v2
        with:
          node-version: "14"
      - run: |
          cd checker
          npm ci
          npm start
