name: Check Synchronet Source Repository for Updates
on:
  # 9am utc daily (1-2am california)
  schedule:
    - cron: "0 9 * * *"

jobs:
  stale:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-node@v2
        with:
          node-version: "14"
      - run: |
          cd checker
          npm ci
          npm start
